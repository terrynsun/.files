# Force cp, mv to check before overwriting.
alias cp='cp -i'
alias mv='mv -i'

# Always want colord ls
alias ls='ls --color=auto'

# Cargo
alias cb='cargo build'
alias cr='cargo run'
alias ct='cargo test'
alias c='cargo'

alias m='make'
alias mt='make test'
alias mc='make clean'

# alias vim='nvim'

# Swap keybaord layouts
alias aoeu='if [ $DISPLAY ]; then setxkbmap us; else loadkeys us; fi; xmodmap ~/.Xmodmap'
alias asdf='if [ $DISPLAY ]; then setxkbmap dvorak; else loadkeys dvp; fi; xmodmap ~/.Xmodmap'

# Quick mute
alias mute='amixer set Master mute'

