# WQHS radio show
alias radio='mplayer http://wqhs6.vpul.upenn.edu:8000/listen'

# vim vundle install
alias vundle='vim +BundleInstall +qall'

alias g='git'
alias gits='git status'
alias gita='git add'
alias gitc='git commit'

alias org='emacs ~/log/todo.org'

alias venv='source venv/bin/activate'

alias ym='yoga monitor'
